{
  "name": "electron-todo-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@reduxjs/toolkit": "^1.4.0",
    "@tailwindcss/custom-forms": "^0.2.1",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "formik": "^2.2.0",
    "pluralize": "^8.0.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.3",
    "typescript": "~3.7.2",
    "uuid": "^8.3.1",
    "yup": "^0.29.3"
  },
  "scripts": {
    "build:tailwind": "postcss tailwind.css -o src/index.css",
    "watch:tailwind": "postcss tailwind.css -o src/index.css --watch",
    "prestart": "yarn build:tailwind",
    "start": "react-scripts start",
    "start:dev": "concurrently \"yarn watch:tailwind\" \"yarn start\"",
    "build:desktop": "yarn build && tsc -p electron/tsconfig.json",
    "start:desktop": "electron ./build/index.js",
    "prebuild": "yarn build:tailwind",
    "build": "PUBLIC_URL=./ react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/pluralize": "^0.0.29",
    "@types/react-redux": "^7.1.9",
    "@types/react-router-dom": "^5.1.6",
    "@types/redux": "^3.6.0",
    "@types/uuid": "^8.3.0",
    "@types/yup": "^0.29.8",
    "concurrently": "^5.3.0",
    "electron": "^10.1.3",
    "postcss-cli": "^8.1.0",
    "tailwindcss": "^1.9.0"
  }
}
